<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.matricula">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_una"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_una_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Matricula"
            android:usesCleartextTraffic="true">
        <activity
                android:name=".view.GroupActivity"
                android:exported="true"/>
        <activity
                android:name=".view.CicleActivity"
                android:exported="true"/>
        <activity
                android:name=".view.CareerActivity"
                android:exported="true"/>
        <activity
                android:name=".view.EnrollmentActivity"
                android:exported="true"/>
        <activity
                android:name=".view.UsersActivity"
                android:exported="true"/>
        <activity
                android:name=".view.CoursesActivity"
                android:exported="true"/>
        <activity
                android:name=".view.MenuActivity"
                android:exported="true"/>
        <activity
                android:name=".view.MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>